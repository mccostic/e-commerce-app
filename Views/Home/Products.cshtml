@model ecom.Models.ViewModels.ProductsViewModel
@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Products</h1>

@if (Model.Products.Any())
{
    <div class="container">
        <div class="row">
            @foreach (var item in Model.Products)
            {
                <div class="col-md-4 mb-4">
                    <div class="card" style="width: 100%;">
                        <img src="data:image/*;base64,@(Convert.ToBase64String(item.PreviewIage))" class="card-img-top" alt="product">
                        <div class="card-body">
                            <h5 class="card-title">@item.ShortDescription</h5>
                            <p class="card-text">@item.Category.Name</p>
                            <p class="card-text text-danger">@item.Price$</p>
                            <a asp-controller="Products" asp-action="ProductPage" asp-route-id="@item.Id" class="btn btn-warning">Buy</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <p>Looks like here is no products!</p>
}
