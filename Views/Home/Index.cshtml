@model ecom.Models.ViewModels.HomeIndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-2">
        <!-- Categories Section -->
        <div class="list-group">
            @foreach (var item in Model.Categories)
            {
                <a href="@Url.Action("Products", "Home", new { id = item.Id })" class="list-group-item list-group-item-action">
                    @item.Name
                </a>
            }
        </div>
    </div>

    <div class="col-md-10">
        <!-- Products Grid -->
        <div class="row">
            @foreach (var item in Model.Products)
            {
                <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                    <div class="card h-100">
                        <img src="data:image/*;base64,@(Convert.ToBase64String(item.PreviewIage))" class="card-img-top" alt="product">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@item.ShortDescription</h5>
                            <p class="card-text">@item.Category.Name</p>
                            <p class="card-text text-danger">@item.Price$</p>
                            <a href="@Url.Action("ProductPage", "Products", new { id = item.Id })" class="btn btn-warning mt-auto">Buy</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
