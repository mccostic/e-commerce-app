@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "User Management";
}

<h1>User Management</h1>
<div class="container mt-3">
    <div class="row">
        <div class="col-12">
            <!-- Add New User Button -->
            <a asp-controller="Home" asp-action="CreateUser" class="btn btn-secondary mb-3">Add New User</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Email</th>
                <th>Username</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.UserName</td>
                    <td>
                        <!-- Edit and Delete User Links -->
                        <a asp-controller="Home" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                        <a asp-controller="Home" asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>